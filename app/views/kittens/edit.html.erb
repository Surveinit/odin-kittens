<h1>Kittens#edit</h1>
<h2> <%= @kitten.name %> </h2>
<%= form_with(model: @kitten, local: true) do |form| %>
  <% if @kitten.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@kitten.errors.count, "error") %> prohibited this recipe from being saved:</h2>
      <ul>
        <% @kitten.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name%>
    <%= form.text_field :name%>
  </div>

  <div>
    <%= form.label :age%>
    <%= form.number_field :age, in: 1..20, step: 1%>
  </div>

  <div>
    <%= form.label :cuteness%>
    <%= form.number_field :cuteness, in: 1..10, step: 1%>
  </div>

  <div>
    <%= form.label :softness%>
    <%= form.number_field :softness, in: 1..10, step: 1%>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= button_to 'Delete', @kitten, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Back', kittens_path %>
